<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/informacion"
    android:background="@drawable/fp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_gravity="center_horizontal"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:src="@drawable/descarga"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:id="@+id/btn_servicios"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/calendar68"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_toLeftOf="@+id/btn_salas"
        android:layout_toStartOf="@+id/btn_salas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Horarios"
        android:textSize="25dp"
        android:id="@+id/txtServicios"
        android:layout_below="@+id/btn_servicios"
        android:layout_marginLeft="25dp"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_salas"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/situation"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/btn_qr"
        android:layout_toRightOf="@+id/txtServicios"
        android:layout_toEndOf="@+id/txtServicios" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:textColor="@android:color/white"
        android:text="Localizar"
        android:textSize="25dp"
        android:id="@+id/txtSalas"
        android:layout_below="@+id/btn_salas"
        android:layout_alignLeft="@+id/btn_salas"
        android:layout_alignStart="@+id/btn_salas" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_qr"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/hand132"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@android:color/white"
        android:onClick="launchSimpleActivity"
        android:layout_below="@+id/btn_informacion"
        android:layout_toRightOf="@+id/btn_historia"
        android:layout_toEndOf="@+id/btn_historia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Precios"
        android:textSize="25dp"
        android:id="@+id/txtQR"
        android:layout_below="@+id/btn_qr"
        android:layout_alignLeft="@+id/btn_qr"
        android:layout_alignStart="@+id/btn_qr"
        android:layout_marginLeft="15dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_informacion"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/business139"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/txtServicios"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/white"
        android:text="Contacto"
        android:textSize="25dp"
        android:id="@+id/txtInfo"
        android:layout_below="@+id/btn_informacion"
        android:layout_alignLeft="@+id/btn_informacion"
        android:layout_alignStart="@+id/btn_informacion"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_historia"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/phone325"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/txtQR"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>