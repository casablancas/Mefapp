<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="me.dm7.barcodescanner.zxing.sample.MenuActivity"
    android:background="@android:color/white"
    android:theme="@style/AppTheme">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/logop2"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="4dp"/>

            <!--<android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_shala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_qr"
                android:layout_toLeftOf="@+id/btn_servicios"
                android:text="Shala"
                android:onClick=""/>-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_qr"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/smartphone233"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:onClick="launchSimpleActivity"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_servicios"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/smartphone233"
                        android:textColor="@android:color/white"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:text="Servicios"
                        android:onClick=""
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_salas"
                    android:layout_marginBottom="30dp"
                    android:background="@color/primary_dark"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_servicios"
                    android:text="Salas"
                    android:onClick=""/>
            </LinearLayout>


            <!--<android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_servicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_qr"
