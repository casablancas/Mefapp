<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relative"
    android:background="@drawable/fp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_gravity="center_horizontal"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:src="@drawable/logop2"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_servicios"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stick_man"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@android:color/white"
        android:layout_above="@+id/btn_salas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Servicios"
        android:textSize="25dp"
        android:id="@+id/txtServicios"
        android:layout_below="@+id/btn_servicios" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_salas"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/building113"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/profile_image"
        android:layout_toRightOf="@+id/btn_servicios"
        android:layout_toEndOf="@+id/btn_servicios" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textColor="@android:color/white"
        android:text="Salas"
        android:textSize="25dp"
        android:id="@+id/txtSalas"
        android:layout_below="@+id/btn_salas"
        android:layout_alignLeft="@+id/btn_salas"
        android:layout_alignStart="@+id/btn_salas" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_qr"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/smartphone233"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@android:color/white"
        android:onClick="launchSimpleActivity"
        android:layout_below="@+id/btn_salas"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="QR"
        android:textSize="25dp"
        android:id="@+id/txtQR"
        android:layout_below="@+id/btn_qr"
        android:layout_alignLeft="@+id/btn_qr"
        android:layout_alignStart="@+id/btn_qr"
        android:layout_marginLeft="40dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_informacion"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/headset1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@android:color/white"
        android:layout_above="@+id/btn_qr"
        android:layout_toLeftOf="@+id/btn_historia"
        android:layout_toStartOf="@+id/btn_historia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="InformaciÃ³n"
        android:textSize="25dp"
        android:id="@+id/txtInfo"
        android:layout_below="@+id/btn_informacion"
        android:layout_alignLeft="@+id/btn_informacion"
        android:layout_alignStart="@+id/btn_informacion"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_historia"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/soldier1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@android:color/white"
        android:onClick="launchSimpleActivity"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Historia"
        android:textSize="25dp"
        android:id="@+id/txtHistoria"
        android:layout_below="@+id/btn_historia"
        android:layout_alignLeft="@+id/btn_historia"
        android:layout_alignStart="@+id/btn_historia"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>